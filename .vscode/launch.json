{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "bin/${input:modulo}",
            "args": ["${input:parametros}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make all",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "additionalSOLibSearchPath": "${workspaceFolder}/bin"
        }
    ],
    "inputs": [
        {
            "id": "modulo",
            "type": "pickString",
            "description": "Seleccione modulo para debuggear",
            "options": [
                "cpu",
                "kernel",
                "testing"
            ],
            "default": "testing"
        },
        {
            "id": "parametros",
            "type": "promptString",
            "description": "Parametros para el modulo",
            "default": ""
        }
    ]
}